<%= fields_for @org do |of| %>
  <label for="org_name" class="has-text-weight-bold mt-3 is-block">
    Name of Organization
    <%= render partial: 'required' %>
    <%= of.text_field :name, class: 'input', placeholder: "Food Bank of the Rockies" %>
  </label>
  <label for="org_website" class="has-text-weight-bold mt-3 is-block">
    Website
    <%= render partial: 'required' %>
    <%= of.text_field :website, class: 'input', placeholder: "https://foodbankrockies.org" %>
  </label>
  <label for="org_desc" class="mt-3 is-block">
    <span class="has-text-weight-bold">Description</span>
    <%= render partial: 'required' %>
    <br>
    <em>You don't need to include information about your location here â€“ just your organization as a whole.</em>
    <%= of.text_area :desc, class: 'textarea', cols: 30, rows: 8, placeholder: "Food Bank of the Rockies is one of the largest hunger relief programs across Colorado, with multiple locations in Denver.\n\nWe provide struggling individuals and families with food boxes, access to soup kitchens, and more." %>
  </label>
<% end %>
