<h1 class="is-size-3 mt-6">
  Your Location
</h1>
<p>
  Please fill out details for your location here. Be as complete as possible.
</p>

<%= fields_for @loc do |lf| %>
  <label for="location_name" class="has-text-weight-bold mt-3 is-block">
    Name
    <%= lf.text_field :name, class: 'input', placeholder: "ABC Assistance - Denver Branch" %>
  </label>

  <label for="location_website" class="has-text-weight-bold mt-3 is-block">
    Website
    <%= lf.text_field :website, class: 'input', placeholder: "https://example.com" %>
  </label>

  <label for="location_desc" class="mt-3 is-block">
    <span class="has-text-weight-bold">Description</span>
    <br>
    <em>You don't need to include information about your organization here – just this specific location.</em>
    <%= lf.text_area :desc, class: 'textarea', cols: 30, rows: 8, placeholder: "Our Denver branch provides the following services to women in need:\n• Nutrition advice\n• Shelter referrals\n• Free legal consultation\n• ..." %>
  </label>

  <label for="location_address1" class="has-text-weight-bold mt-3 is-block">
    Address 1
    <%= lf.text_field :address1, class: 'input', placeholder: "1625 Wynkoop St" %>
  </label>

  <label for="location_address2" class="has-text-weight-bold mt-3 is-block">
    Address 2
    <%= lf.text_field :address2, class: 'input', placeholder: "Suite 1" %>
  </label>

  <label for="location_city" class="has-text-weight-bold mt-3 is-block">
    City
    <%= lf.text_field :city, class: 'input', placeholder: "Denver" %>
  </label>

  <label for="location_state" class="has-text-weight-bold mt-3 is-block">
    State
    <%= lf.text_field :state, class: 'input', placeholder: "CO" %>
  </label>

  <label for="location_zip" class="has-text-weight-bold mt-3 is-block">
    Zip Code
    <%= lf.text_field :zip, class: 'input', placeholder: "80202" %>
  </label>

  <label for="location_email" class="has-text-weight-bold mt-3 is-block">
    Contact Email (shown to the public)
    <!-- <input type="email" class="input" name="location_email" id="location_email" placeholder: "info@example.com"> -->
  </label>

  <label for="location_phone" class="has-text-weight-bold mt-3 is-block">
    Phone Number (shown to the public)
    <!-- <input type="tel" class="input" name="location_phone" id="location_phone" placeholder: "(303) 555-1212"> -->
  </label>

  <label for="location_phone_can_call" class="is-block">
    <!-- <input type="checkbox" name="location_phone_can_call" id="location_phone_can_call"> -->
    People can call this phone number
  </label>

  <label for="location_phone_can_text" class="is-block">
    <!-- <input type="checkbox" name="location_phone_can_text" id="location_phone_can_text"> -->
    People can text this phone number
  </label>

  <label for="location_phone_247" class="is-block">
    <!-- <input type="checkbox" name="location_phone_247" id="location_phone_247"> -->
    This phone number is staffed 24/7
  </label>
  <label class="mt-3 is-block">
    <span class="has-text-weight-bold">Services Provided</span>
    <% @cats.each do |cat| %>

      <label for="location_cat_<%= cat.id %>" class="is-block">
        <!-- <input type="checkbox" name="location_cat_<%= cat.id %>" id="location_cat_<%= cat.id %>"> -->
        <%= cat.name %>
      </label>
    <% end %>
  </label>
<% end %>

<%= fields_for @sub do |sf| %>
  <label for="submission_additional_notes" class="has-text-weight-bold mt-3 is-block">
    Additional info – is there anything else we need to know?
    <!-- <textarea name="location_additional_info" id="location_additional_info" cols="30" rows="4" class="textarea" placeholder: "This section is optional."></textarea> -->
    <%= sf.text_area :additional_notes, class: 'textarea', cols: 30, rows: 4, placeholder: "This section is optional." %>
  </label>

  <label for="submission_contact_email" class="mt-3 is-block">
    <span class="has-text-weight-bold">Your Email (this stays private)</span>
    <br>
    <em>We will send you a confirmation link which you must click to complete your submission. We will also contact you here if we have any questions.</em>
    <%= sf.text_field :contact_email, class: 'input', placeholder: "info@example.com" %>
  </label>
<% end %>
