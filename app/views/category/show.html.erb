<%= crumbs @category, nil %>
<%= admin_edit_button @category %>

<h1 class="is-size-3"><%= @category.name %></h1>
<p><%= markdown(@category.description || '') %></p>
<div class="mb-2"></div>

<%= map_tag @category.locations %>

<%= link_to "Set my location", request_user_location_path %>

<ul class="mt-3">
  <% @category.locations.order(:name).each do |location| %>
  <li>
    <%= link_to location.name, show_category_location_path(@category, location) %>
    <% if location.neighborhood %>
    (<%= location.neighborhood %>, <%= location.zip %>)
    <% else %>
    (<%= location.zip %>)
    <% end %>
  </li>
  <% end %>
</ul>

<%= stylesheet_pack_tag 'map' %>
<%= javascript_pack_tag 'map' %>